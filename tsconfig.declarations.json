{
    "compilerOptions": {
        "target": "ES6",
        "module": "Node16",
        "moduleResolution": "Node16",
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "ES2020"
        ],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
    },
    "include": [
        "src/**/*.d.ts",
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true
    },
}
